{
  "$schema": "https://platformatic.dev/schemas/v0.34.0/db",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "cors": {
      "origin": "{PLT_CORS_ORIGIN}",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ]
    }
  },
  "authorization": {
    "rules": [
      {
        "role": "anonymous",
        "entities": [
          "user",
          "event",
          "usersEvent"
        ],
        "find": false,
        "save": false,
        "delete": false
      }
    ],
    "jwt": {
      "secret": "{PLT_JWT_SECRET}"
    }
  },
  "db": {
    "schemalock": true,
    "connectionString": "{DATABASE_URL}",
    "poolSize": 5,
    "graphql": false,
    "openapi": {
      "ignore": {
        "users": true,
        "usersEvents": true
      }
    },
    "events": false
  },
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": true
  },
  "plugins": {
    "paths": [
      "plugin-root.js",
      "plugin-telegram.js",
      "plugin-keep-alive.js"
    ]
  },
  "types": {
    "autogenerate": true
  }
}
