{
  "$schema": "https://platformatic.dev/schemas/v0.34.0/db",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "cors": {
      "origin": "{PLT_CORS_ORIGIN}",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ]
    }
  },
  "db": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "openapi": true
  },
  "dashboard": false,
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": true
  },
  "plugins": {
    "paths": [
      "plugin-root.js",
      "plugin-telegram.js"
    ]
  },
  "types": {
    "autogenerate": true
  }
}